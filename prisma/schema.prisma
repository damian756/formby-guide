// Prisma schema for FormbyGuide.co.uk

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Business {
  id                    String          @id @default(uuid())
  slug                  String          @unique
  name                  String
  categoryId            String
  category              Category        @relation(fields: [categoryId], references: [id])
  address               String
  postcode              String
  lat                   Float?
  lng                   Float?
  phone                 String?
  email                 String?
  website               String?
  description           String?         @db.Text
  shortDescription      String?
  images                String[]
  tags                  String[]
  openingHours          Json?
  priceRange            String?         // £, ££, £££, ££££
  listingTier           String          @default("free") // free, standard, featured, premium
  claimed               Boolean         @default(false)
  secondaryCategoryIds  String[]
  placeId               String?
  rating                Float?
  reviewCount           Int?
  hygieneRating         String?
  hygieneRatingDate     DateTime?
  hygieneRatingShow     Boolean         @default(true)
  fhrsId                String?
  userId                String?
  user                  User?           @relation(fields: [userId], references: [id])
  stripeSubscriptionId  String?
  stripeCustomerId      String?
  featured              Boolean         @default(false)
  clicks                BusinessClick[]
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt

  @@index([categoryId])
  @@index([slug])
  @@index([listingTier])
  @@index([claimed])
}

model BusinessClick {
  id         String   @id @default(uuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  type       String   // "website" | "phone" | "directions" | "google_reviews"
  createdAt  DateTime @default(now())

  @@index([businessId])
  @@index([createdAt])
  @@index([businessId, type])
}

model Category {
  id                String      @id @default(uuid())
  slug              String      @unique
  name              String
  description       String?     @db.Text
  icon              String?
  parentId          String?
  parent            Category?   @relation("CategoryToCategory", fields: [parentId], references: [id])
  children          Category[]  @relation("CategoryToCategory")
  businesses        Business[]
  metaTitle         String?
  metaDescription   String?
  sortOrder         Int         @default(0)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([slug])
  @@index([parentId])
}

model Area {
  id              String    @id @default(uuid())
  slug            String    @unique
  name            String
  description     String?   @db.Text
  lat             Float?
  lng             Float?
  featuredImage   String?
  metaTitle       String?
  metaDescription String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([slug])
}

model Event {
  id              String    @id @default(uuid())
  slug            String    @unique
  name            String
  description     String?   @db.Text
  dateStart       DateTime
  dateEnd         DateTime?
  venueId         String?
  featuredImage   String?
  category        String?
  featured        Boolean   @default(false)
  metaTitle       String?
  metaDescription String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([slug])
  @@index([dateStart])
  @@index([featured])
}

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  emailVerified DateTime?
  password      String
  name          String?
  image         String?
  role          String      @default("user") // user, admin
  businesses    Business[]
  accounts      Account[]
  sessions      Session[]
  blogPosts     BlogPost[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([email])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id                   String    @id @default(uuid())
  businessId           String
  tier                 String    // standard, featured, premium
  stripeSubscriptionId String    @unique
  stripeCustomerId     String
  status               String    // active, past_due, cancelled, incomplete
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAt             DateTime?
  canceledAt           DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@index([businessId])
  @@index([stripeSubscriptionId])
  @@index([status])
}

model BlogPost {
  id              String    @id @default(uuid())
  slug            String    @unique
  title           String
  content         String    @db.Text
  excerpt         String?
  featuredImage   String?
  authorId        String
  author          User      @relation(fields: [authorId], references: [id])
  published       Boolean   @default(false)
  publishedAt     DateTime?
  metaTitle       String?
  metaDescription String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([slug])
  @@index([published])
  @@index([authorId])
}
